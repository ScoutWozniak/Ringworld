@inherits Sandbox.UI.Panel
@using Sandbox
@using System
@namespace MyGame

<style>
	Chat {
		position: absolute;
		left: 50%;
		top: 50%;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.middle-dot {
		width: 64px;
		height: 64px;
		background-image: url("images/reticle1.png");
		background-size: cover;
		transform: translate(-50%, -50%);
	}

</style>

<root class="Chat">
	<div class="middle-dot" />
</root>

@code {
	public static Chat Current;

	protected override void OnAfterTreeRender(bool firstTime)
	{
		base.OnAfterTreeRender(firstTime);

		Current = this;
	}

	public void Testing()
	{
		Log.Info("test");
	}
}
